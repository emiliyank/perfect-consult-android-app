<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="54dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txt_name"
            android:layout_marginBottom="@dimen/padding_big"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/welcome_to_the_perfect_consult_mobile_app"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_export_database"
            android:layout_margin="@dimen/padding_big"
            android:background="@drawable/shape_oval"
            android:text="Export Database"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    <ScrollView android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/scroll_database"
                android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_database"
                  android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
